<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackCubed.Maui.Views.AddCubedItemPage"
             xmlns:viewmodels="clr-namespace:TrackCubed.Maui.ViewModels"
             x:DataType="viewmodels:AddCubedItemViewModel"
            Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Name" />
            <Entry Text="{Binding Name}" Placeholder="e.g., Awesome MAUI Article" />

            <Label Text="Link" />
            <Entry Text="{Binding Link}" Placeholder="https://..." />

            <Label Text="Description" />
            <Editor Text="{Binding Description}" Placeholder="A short summary..." AutoSize="TextChanges" HeightRequest="100"/>

            <Label Text="Notes" />
            <Editor Text="{Binding Notes}" Placeholder="Personal notes about this item..." AutoSize="TextChanges" HeightRequest="150"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="{Binding SaveButtonText}" Command="{Binding SaveCommand}" />
                <Button Grid.Column="1" Text="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource Key=SecondaryButton}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>