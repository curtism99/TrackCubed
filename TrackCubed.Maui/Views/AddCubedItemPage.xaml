<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackCubed.Maui.Views.AddCubedItemPage"
             xmlns:viewmodels="clr-namespace:TrackCubed.Maui.ViewModels"
             x:DataType="viewmodels:AddCubedItemViewModel"
            Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Name" />
            <Entry Text="{Binding Name}" Placeholder="e.g., Awesome MAUI Article" />

            <Label Text="Link" />
            <Entry Text="{Binding Link}" Placeholder="https://..." />

            <Label Text="Description" />
            <Editor Text="{Binding Description}" Placeholder="A short summary..." AutoSize="TextChanges" HeightRequest="100"/>

            <Label Text="Notes" />
            <Editor Text="{Binding Notes}" Placeholder="Personal notes about this item..." AutoSize="TextChanges" HeightRequest="150"/>

            <Label Text="Tags" Margin="0,15,0,0"/>

            <!-- A horizontal layout for adding new tags -->
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Entry Grid.Column="0" 
           Text="{Binding NewTagText}"
           Placeholder="Enter a tag and press add"
           ReturnCommand="{Binding AddTagCommand}" />
                <Button Grid.Column="1" 
            Text="Add" 
            Command="{Binding AddTagCommand}" />
            </Grid>

            <!-- A FlexLayout to display the tags as removable pills -->
            <FlexLayout BindableLayout.ItemsSource="{Binding Tags}" 
            Wrap="Wrap" 
            Margin="0,10,0,0">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type x:String}">
                        <Frame Padding="10,5" Margin="5" CornerRadius="15" 
                   BackgroundColor="{StaticResource Secondary}">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Label Grid.Column="0" Text="{Binding .}" 
                           TextColor="{StaticResource Primary}" 
                           VerticalOptions="Center"/>
                                <Button Grid.Column="1" Text="X" FontSize="10" 
                            TextColor="{StaticResource Primary}"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Padding="0" HeightRequest="20" WidthRequest="20"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AddCubedItemViewModel}}, Path=RemoveTagCommand}"
                            CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>


            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="{Binding SaveButtonText}" Command="{Binding SaveCommand}" />
                <Button Grid.Column="1" Text="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource Key=SecondaryButton}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>