<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TrackCubed.Maui.ViewModels"
             x:DataType="viewmodel:SettingsPageViewModel"
             x:Class="TrackCubed.Maui.Views.SettingsPage"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundColorLight}, Dark={StaticResource PageBackgroundColorDark}}">

    <Grid RowDefinitions="*, Auto" Padding="20">

        <!-- User Information Section -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" VerticalOptions="Start">
            <Label Text="Display Name" 
                   FontSize="Caption" 
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
            <Label Text="{Binding DisplayName}" 
                   FontSize="Title" 
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColorLight}, Dark={StaticResource PrimaryTextColorDark}}"/>

            <Label Text="Email"
                   FontSize="Caption"
                   Margin="0,20,0,0"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
            <Label Text="{Binding Email}" 
                   FontSize="Large" 
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColorLight}, Dark={StaticResource PrimaryTextColorDark}}"/>
        </VerticalStackLayout>

        <!-- Sign Out Button -->
        <Button Grid.Row="1"
                Text="Sign Out"
                Command="{Binding SignOutCommand}"
                BackgroundColor="Red"
                TextColor="White"
                VerticalOptions="End"
                Margin="0,0,0,20"/>
    </Grid>

</ContentPage>