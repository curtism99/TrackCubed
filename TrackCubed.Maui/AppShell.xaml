<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackCubed.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackCubed.Maui"
    xmlns:views="clr-namespace:TrackCubed.Maui.Views"
    Title="TrackCubed.Maui"
    Shell.FlyoutBehavior="Disabled">
    <!-- 
      The LoginPage is defined outside of any other container.
      It's a standalone page that is not part of the main app navigation.
    -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- 
      THIS IS THE NEW PART: A TabBar for the main application UI.
      It's given a name so we can control it from C# code.
      It's hidden by default.
    -->
    <TabBar x:Name="MainAppTabs" IsVisible="False">
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
        Title="Settings"
        Icon="user.png"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />
        
    </TabBar>
</Shell>
