<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackCubed.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackCubed.Maui"
    xmlns:views="clr-namespace:TrackCubed.Maui.Views"
    Title="TrackCubed.Maui"
    Shell.FlyoutBehavior="Disabled">


    <!-- The TabBar for the main application UI -->
    <TabBar x:Name="MainAppTabs" 
            Route="MainAppTabs" >
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
        Title="Settings"
        Icon="settings_account_box.svg"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />
        
    </TabBar>
    <ShellContent
        ContentTemplate="{DataTemplate views:AddCubedItemPage}"
        Route="AddCubedItemPage"
        IsEnabled="False"
        IsVisible="False" />
</Shell>
